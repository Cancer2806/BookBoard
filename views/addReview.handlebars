<div class="login-wrapper">
  <div class="form-wrapper login-box">
      <div class="content-header flex h-zero">
          <div class="header-title">
            <h3>Add Review</h3>
          </div>
      </div>
      <div class="content-body h-zero">
      <form action="" class="filters-form">
        <input type="hidden" id="file_id" value="{{{id}}}" />
        <label class="form-label" for="user-bio">Add Review Comment:</label>
        <textarea type="text" name="user-bio" class="bio-input"></textarea>
        <br>
        <label class="form-label" for="rating">Rating:</label>
        <br>
        <input type="radio" name="stars" id="stars" value="1" />
        <span class="icon">★</span>
        <label class="pad">
          <input type="radio" name="stars" id="stars" value="2" />
          <span class="icon">★</span>
          <span class="icon">★</span>
        </label>
        <label class="pad">
          <input type="radio" name="stars" id="stars" value="3" />
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
        </label>
        <label class="pad">
          <input type="radio" name="stars" id="stars" value="4" />
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
        </label>
        <label class="pad">
          <input type="radio" name="stars" id="stars" value="5" />
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
          <span class="icon">★</span>
        </label>
        <br>
        <button type="submit" value="Login" class="login-btn">Submit</button>
      </form>
    </div>
  </div>
</div>

<script src="../js/review.js"></script>