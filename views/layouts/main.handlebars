<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookBoard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
      integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
      crossorigin="anonymous"
    />

  </head>
  <body>

    <header>
      <div class="header-wrapper flex">
        <div class="logo-sec flex">
          {{!-- <h3>Book Board</h3> --}}
         <a href="/" class="logo-wrap flex"><img src="/img/bookboard-logo.svg" alt="BookBoard" class="logo"></a>
        </div>
        <div class="search-sec flex">
          <form action="/search" method="get" class="search-form flex">
            <input type="text" id="title" name="title" class="search-field" placeholder="Search for book title!" />
            <input type="submit" class="search-submit" value="Search" />
          </form>
        </div>
        <div class="nav-sec">
          {{#if logged_in}}
            <div class="nav-item flex">
              <p><a href="/upload">Upload</a></p>
            </div>
            <div class="nav-item flex">
              <p><a href="/profile/{{user_id}}">Profile</a></p>
            </div>
            <div class="nav-item flex">
              <p><a href="/logout">Logout</a></p>
            </div>
          {{else}}
            <div class="nav-item flex">
              <p><a href="/login">Login</a></p>
            </div>
            <div class="nav-item flex">
              <p><a href="/register">Register</a></p>
            </div>
          {{/if}}
        </div>
      </div>
      <div class="menu-button">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>
      <div class="menu-close">
        âœ•
      </div>
      <div class="h-menu">
        <form class="search-form flex">
          <input type="text" class="search-field" />
          <input type="submit" class="search-submit" value="Search" placeholder="Search for book title!" />
        </form>
        {{#if logged_in}}
        <div class="nav-item flex">
          <a href="/upload" class="h-items">Upload</a>
        </div>
        <div class="nav-item flex">
          <a href="/profile/{{user_id}}" class="h-items">Profile</a>
        </div>
        <div class="nav-item flex">
          <a href="/logout" class="h-items">Logout</a>
        </div>
        {{else}}
        <div class="nav-item flex">
          <a href="/login" class="h-items">Login</a>
        </div>
        <div class="nav-item flex">
          <a href="/register" class="h-items">Register</a>
        </div>
        {{/if}}
      </div>
    </header>
    <div class="gap"></div>
    <main>
      {{{body}}}
    </main>

    <footer>
      <p>
        Copyright (C) 2022 BookBoard All Rights Reserved
      </p>
    </footer>

    <script src="/js/main.js"></script>
  </body>
</html>