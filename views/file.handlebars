 <main>
    {{#if logged_in}}
        
     <div class="right-section"><a class="btnlink" data-price="{{fileobj.price}}" id="btnfavourite" data-id="{{fileobj.id}}" href="#"   >Favourite</a><a class="btnlink" data-price="{{fileobj.price}}" id="btndownload" href="#" data-id="{{fileobj.id}}" data-url="/uploads/doc/{{fileobj.source_file}}" >Download</a><a class="btnlink" target="_blank" href="/uploads/doc/{{fileobj.source_file}}">Read</a></div> {{/if}}
     <div class="column">

  <div class="row">
    <div class="column">
      <div ><img class="largeImg" src="/uploads/img/{{fileobj.cover_art}}" /></div>
      <div class="row">
        <div class="header">{{fileobj.title}}</div>
        <div class="description"><strong>Description : </strong><br><br>{{fileobj.brief_description}}</div>
        <div class="content-text">Author : {{fileobj.user.first_name}} {{fileobj.user.last_name}}</div>
         <div class="content-text">Category : {{fileobj.category.category_name}}</div>
          <div class="content-text">Document Type : {{fileobj.type.type_name}}</div>
      </div>
      
    </div>
    <div class="review">{{> file-preview }}</div>
    <div class="review">{{> review-detail}}</div>
  </div>
  <div class="width40">{{> download-detail}}</div>

</div></main>
<script src="../js/files.js"></script>